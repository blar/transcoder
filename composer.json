    "require-dev": {
        "satooshi/php-coveralls": "^1.0",
        "apigen/apigen": "^5.0@dev",
        "roave/better-reflection": "@dev",
        "phpunit/phpunit": "^6.2"
    },
    "support": {
        "source": "https://github.com/blar/transcoder/",
        "issues": "https://github.com/blar/transcoder/issues",
